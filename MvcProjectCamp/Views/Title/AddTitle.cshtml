@model EntityLayer.Concrete.Title

@{
    ViewBag.Title = "AddTitle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>New Title Added</h3>
<br />
@using (Html.BeginForm("AddTitle", "Title", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Title Name")
        @Html.TextBoxFor(x => x.TitleName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TitleName)
        <br />
        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" } ) 
        @*@Html.ValidationMessageFor(x => x.CategoryID)*@
        <br />
        @Html.Label("Writer")
        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterID)
        <br />
        <button class="btn btn-info">Add Title</button>
    </div>
}
